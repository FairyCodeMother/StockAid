<table class="table table-striped">
  <thead>
    <tr>
      <th>Organization Name</th>
      <th>Address</th>
      <th>Phone Number</th>
      <th>Email</th>

    </tr>
  </thead>
  <tbody>
    <% @organizations.each do |organization| %>
    <tr>
      <td><%= organization.name %></td>
      <td><%= organization.address %></td>
      <td><%= organization.phone_number %></td>
      <td><%= organization.email %></td>
      <td><button id="singlebutton" data-toggle="modal" data-target="#modal<%= organization.id %>" name="singlebutton" class="btn btn-primary btn-sm">Edit</button></td>

    </tr>

    <% end %>
  </tbody>
</table>


