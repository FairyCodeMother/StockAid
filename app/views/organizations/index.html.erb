<% content_for :title, "Organizations" %>

<% content_for :content do %>
  <% if current_user.can_create_organization? %>
    <%= render partial: "organization_modal", locals: { organization: Organization.new, path: organizations_path, method: :post } %>
  <% end %>

  <div class="row input-row">
    <div class="col-xs-12">
      <div class="pull-right">
        <% if current_user.can_create_organization? %>
          <button  data-toggle="modal" data-target="#modal" class="btn btn-primary">Add Organization</button>
        <% end %>
      </div>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-striped data-table">
      <thead>
        <tr>
          <th>County</th>
          <th>Name</th>
          <th>Mailing Address</th>
          <th><%= t :organization_phone %></th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% current_user.organizations_with_permission_enabled(:can_update_organization_at?).each do |organization| %>
          <tr data-href="<%= edit_organization_path(organization) %>">
            <td><%= organization.county %></td>
            <td><%= organization.name %></td>
            <td><%= organization.address %></td>
            <td><%= organization.phone_number %></td>
            <td><%= organization.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
