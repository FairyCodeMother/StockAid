<script type="text/x-tmpl" id="donation-row-template">
  <tr class="donation-row">
    <td>
      <div class="form-group select-item">
        {%# tmpl("item-selector-template", { name: "donation[donation_details][item_id][]" }) %}
      </div>
    </td>

    <td>
      <div class="form-group">
        <input type="number" name="donation[donation_details][quantity][]" class="quantity form-control" placeholder="Amount donated" data-guard="required int" data-guard-int-min="1" />
      </div>
    </td>

    <td>
      <button type="button" class="pull-right btn btn-danger btn-xs table-editable-delete">
        <span class="glyphicon glyphicon-trash"></span>
      </button>
    </td>
  </tr>
</script>
