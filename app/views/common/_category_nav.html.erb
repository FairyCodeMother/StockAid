<ul id="category_nav" class="nav nav-pills nav-stacked">
  <%= tab("All Items", items_path, @category.blank?) %>

  <% @categories.each do |category| %>
    <%= tab(category.description, items_path(category_id: category.id), @category == category) %>
  <% end %>

  <%= tab("Deleted Items", deleted_items_path, @category = "Deleted Items") %>
</ul>

<% if current_user.can_view_and_edit_items? %>
  <div class="top15">
    <%= link_to "Create Category", new_category_path, class: "btn btn-primary btn-block" %>
  </div>
<% end %>
