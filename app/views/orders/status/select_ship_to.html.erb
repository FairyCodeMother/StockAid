<% content_for :title, "Select Shipping Address" %>

<% content_for :content do %>
  <%= form_for @order, method: :patch, data: { live_guarded: true } do |f| %>
    <div class="row">
      <div class="col-xs-12">
        <div class="form-group">
          <%= f.label 'Ship to name:' %>
          <%= f.text_field :ship_to_name, class: "form-control", data: { guard: "required" } %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <div class="form-group">
          <%= f.label 'Ship to address:' %>
          <%= f.select :ship_to_address, @order.ship_to_addresses, { prompt: "Select an address" }, class: "form-control", data: { guard: "required" } %>
        </div>
      </div>
    </div>
    <%= render partial: "order_buttons", locals: { order: @order } %>
  <% end %>
<% end %>
