<h2>Garment Orders</h2>

<ul class="nav nav-tabs">
  <li role="presentation" class="active"><a href="/orders">Orders</a></li>
  <li role="presentation"><a href="/inventory">Inventory</a></li>
  <li role="presentation"><a href="/contacts">Contacts</a></li>
</ul>

<div class="well">
  <div style="float:right;">
    <select class="form-control">
      <option value="">Show all statuses</option>
      <% Order::VALID_STATUSES.sort.each do |status| %>
        <option value="<%= status %>"><%= status %></option>
      <% end %>
    </select>
  </div>
  <div class="input-group">
    <input type="text" class="form-control" placeholder="Search" />
  </div>
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Order Number</th>
        <th>Date Received</th>
        <th>Organization Name</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>140186</td>
        <td>1/20/2016</td>
        <td>Stanford Hospital</td>
        <td>Pending</td>
      </tr>
      <tr>
        <td>140185</td>
        <td>1/20/2016</td>
        <td>Kaiser Permanente Mountain View</td>
        <td>Pending</td>
      </tr>
    </tbody>
  </table>
</div>

<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#order_details_modal">
  Order Details
</button>

<!-- Order Details Modal -->
<div class="modal fade" id="order_details_modal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Order 140186</h4>
      </div>
      <div class="modal-body">
        <table class="table">
          <tbody>
            <tr>
              <td><strong>Organization:</strong></td>
              <td>Stanford</td>
            </tr>
            <tr>
              <td><strong>Received:</strong></td>
              <td>1/20/2016</td>
            </tr>
            <tr>
              <td><strong>Status:</strong></td>
              <td>Pending</td>
            </tr>
          </tbody>
        </table>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Items</th>
              <th>Quantity Requested</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Blankets</td>
              <td>20</td>
            </tr>
            <tr>
              <td>Hats</td>
              <td>15</td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Approve</button>
        <button type="button" class="btn btn-danger">Deny</button>
      </div>
    </div>
  </div>
</div>
