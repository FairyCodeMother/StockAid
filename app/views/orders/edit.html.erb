<% content_for :title, "Edit Order #{@order.id}" %>

<% content_for :content do %>
  <%= form_tag "/orders/#{@order.id}", method: "PATCH" do %>
    <div class="bottom15">
    <%= render partial: "order_header", locals: { order: @order, editable: true } %>

    </div>

    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Item</th>
          <th>Quantity Requested</th>
        </tr>
      </thead>

      <tbody>
        <% @order.order_details.each do |details| %>
          <tr >
            <td>
              <%= details.item.description %>
            </td>
            <td>
              <input type="text" name="order_details[<%= details.id %>]" value="<%= details.quantity %>" />
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <button class="btn btn-default add-item">Add Item</button>
    <button type="submit" class="btn btn-primary">Save Changes</button>
  <% end %>

  <div class="modal fade" id="add_inventory_modal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title">Add Inventory Item</h4>
        </div>
        <div class="modal-body">
          <% Category.all.each do |category| %>
            <%= render partial: "items/requested_items_table", locals: {category: category, items: category.items} %>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary">Add Item</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
