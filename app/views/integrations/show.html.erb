<% content_for :title, "Integrations" %>

<% content_for :content do %>
  <div class="row">
    <div class="col-xs-12">
      <h2>NetSuite</h2>

      <div class="row">
        <div class="col-xs-12">
          <h4>Total Inventory Value</h4>
          <p><%= number_to_currency(@total_inventory_value, precision: 2) %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <h4>Exports</h4>
            <div class="col-xs-12">
              <%= form_tag net_suite_export_reports_path, method: :get, class: "form-group" do %>
                <div class="row">
                  <div class="form-group col-xs-3">
                    <%= label_tag :report_type, "Report Type", class: "control-label" %>
                    <%= select_tag :report_type, options_for_select(net_suite_export_select_options), class: "form-control" %>
                  </div>

                  <div class="form-group col-xs-3">
                    <%= label_tag :report_start_date, "Start Date", class: "control-label" %>
                    <%= text_field_tag :report_start_date, params[:report_start_date], data: { provide: "datepicker" }, class: "form-control" %>
                  </div>

                  <div class="form-group col-xs-3">
                    <%= label_tag :report_end_date, "End Date", class: "control-label" %>
                    <%= text_field_tag :report_end_date, params[:report_end_date], data: { provide: "datepicker" }, class: "form-control" %>
                  </div>
                </div>

                <div class="row">
                  <div class="form-group col-xs-3">
                    <%= submit_tag "Download CSV", class: "btn btn-default" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
