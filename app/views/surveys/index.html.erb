<% content_for :title, "Surveys" %>

<% content_for :content do %>
  <div class="row">
    <div class="col-xs-12">
      <div class="pull-right">
        <%= link_to "New Survey", new_survey_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <br />

  <div class="row">
    <div class="col-xs-12">
      <table class="table table-striped table-responsive data-table">
        <thead>
          <tr>
            <th>Title</th>
          </tr>
        </thead>

        <tbody>
          <% @surveys.each do |survey| %>
            <tr>
              <td data-href="<%= survey_path(survey) %>">
                <%= survey.title %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
