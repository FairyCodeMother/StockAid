<table <%= 'style="display: none;"'.html_safe if local_assigns[:hidden] %> class="table table-hover" id="shipments-table">
  <thead>
    <tr>
      <% if local_assigns[:show_order_number] %>
        <th>Order Number</th>
      <% end %>
      <th>Tracking Number</th>
      <th>Carrier</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% shipments.each do |shipment| %>
      <tr>
        <% if local_assigns[:show_order_number] %>
          <td>
            <%= shipment.order.id %>
          </td>
        <% end %>
        <td>
          <%= link_to shipment.tracking_number, shipment.tracking_url %>
        </td>
        <td>
          <%= shipment.shipping_carrier %>
        </td>
        <td>
          <%= link_to shipment_path(shipment), method: :delete, class: "btn btn-danger btn-xs", data: { confirm: "Are you sure?" } do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
