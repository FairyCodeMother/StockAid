<% if purchase.new_purchase? %>
  <button type="submit" name="purchase[status]" value="purchased" class="btn btn-primary" title="Change status from new to placed">
    Purchase Placed
    <i class="glyphicon glyphicon-chevron-right"></i>
  </button>
<% elsif purchase.purchased? %>
  <button type="submit" name="purchase[status]" value="shipped"  class="btn btn-primary" title="Change status from placed to shipped">
    <i class="glyphicon glyphicon-chevron-right"></i>
    Purchase Shipped
  </button>
<% elsif purchase.shipped? %>
  <button type="submit" name="purchase[status]" value="received"  class="btn btn-primary" title="Change status from shipped to received">
    <i class="glyphicon glyphicon-chevron-right"></i>
    Purchase Received
  </button>
<% elsif purchase.received? %>
  <button type="submit" name="purchase[status]" value="closed" class="btn btn-primary" title="Change status from received to closed">
    Close Purchase
    <i class="glyphicon glyphicon-chevron-right"></i>
  </button>
<% end %>
