<% content_for :title, "Donors" %>

<% content_for :content do %>
  <%= render partial: "donors/tabs" %>

  <div class="row">
    <div class="col-xs-12">
      <table class="table table-striped table-responsive data-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Date Created</th>
            <th>External Id</th>
          </tr>
        </thead>

        <tbody>
          <% @donors.each do |donor| %>
            <tr class="donor" data-donor-id="<%= donor.id %>" data-href="<%= edit_donor_path(donor) %>">
              <td><%= truncate donor.name, length: 25 %></td>
              <td><%= truncate donor.email, length: 25 %></td>
              <td><%= truncate donor.phone_number, length: 13 %></td>
              <td><%= truncate donor.primary_address, length: 50 %></td>
              <td><%= donor.created_at.strftime("%-m/%-d/%Y") %></td>
              <td><%= donor.external_id %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
