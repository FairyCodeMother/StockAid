<% content_for :title, "Edit #{@donor.name}" %>

<% content_for :content_size, "col-sm-9 col-md-10" %>

<% content_for :content do %>
  <%= form_for @donor, data: { live_guarded: true } do |f| %>
    <fieldset id="donor_info">
      <% if current_user.can_update_donors? %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", data: { guard: "required" } %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control", data: { guard: "required email" } %>
      </div>

      <div class="form-group">
        <%= f.label :phone_number, t(:organization_phone) %>
        <%= f.telephone_field :phone_number, class: "form-control", data: { guard: "phoneUS" } %>
      </div>

      <%= f.fields_for :addresses do |address| %>
        <div class="form-group">
          <%= address.label :address, "Mailing Address" %>
          <%= address.text_field :address, class: "form-control", data: { guard: "different" } %>
        </div>
      <% end %>
    </fieldset>

    <input type="submit" class="btn btn-primary" value="Save" />
    <%= link_to "Cancel", cancel_edit_donor_path, type: "button", class: "btn btn-default" %>
    <%= link_to "Delete", donor_path(@donor), method: :delete, class: "btn btn-danger pull-right", data: confirm(title: "Deleting Donor: #{@donor.name}") %>
  <% end %>
<% end %>
