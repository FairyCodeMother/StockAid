<% content_for :title, "Reports" %>

<% content_for :content_size, "col-sm-9" %>

<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked">
    <%= tab("All Graphs", graphs_reports_path, params[:by_day].blank? && params[:by_month].blank?) %>
    <%= tab("Orders by Day", graphs_reports_path(by_day: true), params[:by_day] == "true") %>
    <%= tab("Orders by Month", graphs_reports_path(by_month: true), params[:by_month] == "true") %>
  </ul>
<% end %>

<% content_for :content do %>
  <div class="tab-content">
    <% if params[:by_day] == "true" %>
      <div class="row">
        <div class="col-xs-12">
          Orders by Date
        </div>

        <div class="col-xs-12">
          <%= area_chart @report_by_date %>
        </div>
      </div>
    <% elsif params[:by_month] == "true" %>
      <div class="row">
        <div class="col-xs-12">
          Orders by Month
        </div>

        <div class="col-xs-12">
          <%= area_chart @report_by_month %>
        </div>
      </div>
    <% else %>
      <div class="row">
        <div class="col-xs-12">
          Orders by Date
        </div>

        <div class="col-xs-12">
          <%= area_chart @report_by_date %>
        </div>
      </div>

      <hr/>

      <div class="row">
        <div class="col-xs-12">
          Orders by Month
        </div>

        <div class="col-xs-12">
          <%= area_chart @report_by_month %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
