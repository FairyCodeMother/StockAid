<%= bootstrap_devise_error_messages! %>
<div class="row">
  <div class="col-sm-offset-3 col-sm-6">
    <h2>Forgot your password?</h2>
    <div class="panel panel-default login_box">
<!--       <div class="panel-heading">
        <h4><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h4>
      </div> -->
      <div class="panel-body">
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: "btn btn-primary pull-right" %>
        <% end %>
      </div>
    </div>
    <div class="text-right pull-right">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
