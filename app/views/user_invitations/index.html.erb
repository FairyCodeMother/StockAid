<div class="row">
  <div class="col-xs-6">
    <h4>Users</h4>
  </div>
</div>

<div class="well">
  <%= render partial: "users/tabs" %>

  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Organization Name</th>
        <th>Organization Role</th>
        <th>Invited By</th>
        <th>Expires</th>
      </tr>
    </thead>

    <tbody>
      <% @invites.each do |invite| %>
        <tr>
          <td><%= invite.name %></td>
          <td><%= invite.email %></td>
          <td><%= invite.organization.name %></td>
          <td><%= invite.role %></td>
          <td><%= invite.invited_by.name %></td>
          <td><%= local_time invite.expires_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
