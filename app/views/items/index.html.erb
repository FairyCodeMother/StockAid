<%= render "common/tabs", active: 'inventory' %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-10 col-sm-3 col-md-2 sidebar sidebar-left sidebar-animate sidebar-md-show">
      <ul class="nav navbar-stacked category-navbar">
        <% @categories.each do |category| %>
        <li>
          <%= link_to category.description, items_path(category_id: category.id) %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<% if @category.present? %>
  <div class="col-md-10 col-md-offset-2 well">
  <h4><%= @category.description %></h4>
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Description</th>
          <th>Quantity In Stock</th>
          <th>Quantity Requested</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.description %></td>
          <td><%= item.current_quantity %></td>
          <td><%= item.requested_quantity %></td>
          <td>
            <%= link_to '', edit_item_path(item.id), class: 'btn btn-default btn-block-xs glyphicon glyphicon-pencil' %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="col-md-10 col-md-offset-2 well">
    <% @categories.each do |category| %>
      <h4><%= category.description %></h4>
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Description</th>
            <th>Quantity In Stock</th>
            <th>Quantity Requested</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% category.items.each do |item| %>
          <tr>
            <td><%= item.description %></td>
            <td><%= item.current_quantity %></td>
            <td><%= item.requested_quantity %></td>
            <td>
            <%= link_to '', edit_item_path(item.id), class: 'btn btn-default btn-block-xs glyphicon glyphicon-pencil' %>
          </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
<% end %>
