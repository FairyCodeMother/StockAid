<h4>
  <%= category.description %>
</h4>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th>Quantity</th>
    </tr>
  </thead>

  <tbody>
    <% items.each do |item| %>
      <tr>
        <td><%= item.description %></td>
        <td><input type="text" name="" /></td>
      </tr>
    <% end %>

    <button type="submit">Add items</button>
  </tbody>
</table>
